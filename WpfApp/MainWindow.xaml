<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200">
    <Grid Background="Black">
        <StackPanel Width="100" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ComboBox Name="devicesComboBox" SelectionChanged="devicesComboBox_SelectionChanged">
                
            </ComboBox>
            <TextBox Name="pathTextBox"></TextBox>
            <Button Name="StartButton" Click="Button_Click">Start</Button>
        </StackPanel>
    </Grid>
</Window>
